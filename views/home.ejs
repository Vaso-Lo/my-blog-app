<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cozy Blog</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>

<!-- Header -->
<header class="home header">
    <div class="logo-title">
        <img src="./styles/images/coffee-love-white.svg" alt="coffee love logo" height="90px"/>
        <h1>Cozy Blog</h1>
    </div>
    <a href="/new" class="btn">Create New Post</a>
</header>

<!-- Blog Posts -->
<div class="blog-container <%= posts.length === 0 ? 'no-posts' : '' %>">
    <% if (posts.length > 0) { %>
        <div class="posts">
            <% posts.forEach(post => { %>
                <div class="post">
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    
                    <div class="button-container">
                        <a href="/edit/<%= post.id %>" class="btn">Edit</a>
                        <form action="/delete/<%= post.id %>" method="POST">
                            <button type="submit" class="btn delete" style="background: #D84040;">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>

    <!-- Sidebar -->
